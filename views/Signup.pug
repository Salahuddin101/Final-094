doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login Form

    // Include Bootstrap CSS
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

  body
    form(action="/Signup/ConfirmSignup" method="post" class="m-3 p-3 border border-secondary rounded")
      .form-group
        label(for="username") Username:
        input(type="text" id="name" name="name" class="form-control")

      .form-group
        label(for="password") Password:
        input(type="password" id="password" name="password" class="form-control" pattern=".{8,}"  required)
      .form-group
        label(for="password") email:
        input(type="text" id="email" name="email" class="form-control" pattern=".{8,}"  required)



      button(type="submit" class="btn btn-primary mt-3") Sign Up

    // Include Bootstrap JavaScript
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
